<% layout('layouts/boilerplate') %>
<body  style="background-color: #cdecc1">
       <div class="video-slider mt-5 ">
        <h4 class="bannerText-logo">AdoptLy</h4>
        <p class="bannerText">"Congratulations !! <br/> on your future happiness."</p>
        
        <div class="video-container" id="videoContainer">
            <% let videos = ["/videos/hero-1.mp4", "/videos/hero-2.mp4", "/videos/hero-3.mp4", "/videos/hero-4.mp4"]; %>
            <% videos.forEach((src, index) => { %>
                <div class="video-slide">
                    <video src="<%= src %>" muted loop autoplay playsinline></video>
                    <div class="overlay"></div>
                </div>
            <% }); %>
        </div>

        <div class="navigation">
            <% videos.forEach((_, index) => { %>
                <div class="nav-dot" onclick="handleDotClick('<%= index %>')"></div>
            <% }); %>
        </div>
    </div>
    <div class="container landingpage p-5 " style="margin-left: 40px;">
        <div class="row">
            <% limitedAdopts.forEach((adopt, index) => { %>
                <div class="col-md-4 mb-4">
                    <a href="/adoptly/<%= adopt.category %>" class="text-decoration-none">
                        <div class="card landingpage-card" style="border-radius: 10px;">
                            <img src="<%= adopt.image %>" class="card-img-top" alt="<%= adopt.breed %>" 
                                style="margin: 20px; height: 300px; width: 350px; border-radius: 10px; object-fit: cover;">
                            <div class="card-body text-center">
                                <p class="card-text" style="color: #28621E;"><%= adopt.category %></p>
                                <p class="card-text" style="color: #28621E;">Price: â‚¹<%= adopt.price %></p>
                                
                                <p class="card-text" style="color: #28621E;">Gender: <%= adopt.gender %></p>
                                <p class="text-decoration-none" style="color: #8ba088; line-height: 2; font-weight: 300;">
                                    See more..
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
    
                <% if ((index + 1) % 3 === 0) { %>
                    </div><div class="row">
                <% } %>
    
            <% }); %>
        </div>
                        
        </div>
        <div class="gallery">
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/2b/2c/94/2b2c9431fb8e801f62a2616b7a2b6aab.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/07/4b/67/074b671d31be3977086f27c2a14bbca8.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/85/6d/13/856d13a655e8005124f5a630d01136f9.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/ff/30/dc/ff30dc403e87fca7722b3143c266ea91.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/77/14/42/771442411adb6acc70554888ac4d0c49.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/17/fd/0e/17fd0e2ac72c443507ef2c5d8697a590.jpg"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/d4/9e/5b/d49e5bca56b4d7d0630a8a9a9c8fc8c1.jpg"/></div>
            <div class="gallery-img"><img src="https://images.unsplash.com/photo-1497469074122-b9cc3bb29f4b?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"/></div>
            <div class="gallery-img"><img src="https://i.pinimg.com/736x/45/40/da/4540daf5172b37928ecec4b67864b8e7.jpg"/></div>
        </div>
    
        <div class="gallery-text">
            <div class="text-card">
                <h1>"Adopt the color of kindness into their lives."</h1>
            </div>
            <div class="text-card">
                <h1>"Providing warmth and care, not just for people but for every soul."</h1>
            </div>
        </div>
        
    </div>
</body>
<style>
.gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    padding: 2% 10%;
}

.gallery-img {
    height: 250px;
    width: 350px;
    overflow: hidden;
}

.gallery-img img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 8px;
}

.gallery-text {
    display: flex;
    justify-content: center;
    /* margin-top: 20px; */
}

.text-card {
    position: relative;
    background-size: cover;
    background-position: center;
    width: 600px;
    height: 350px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content:flex-start;
    text-align: center;
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin: 10px;
}

.text-card:first-child {
    background-image: url('https://i.pinimg.com/736x/ff/ac/74/ffac7405212fb6875e0d552f032744ab.jpg');
}

.text-card:last-child {
    background-image: url('https://i.pinimg.com/736x/5c/fd/fc/5cfdfcec0f7d766de535cb14186f3bc0.jpg');
}

@media (max-width: 768px) {
    .gallery {
        grid-template-columns: repeat(2, 1fr);
        padding: 2% 10%;
    }

    .text-card {
        width: 90%;
        height: 200px;
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .gallery {
        grid-template-columns: repeat(1, 1fr);
        padding: 2% 5%;
    }

    .text-card {
        width: 100%;
        height: 180px;
        font-size: 0.9rem;
    }
}
</style>
